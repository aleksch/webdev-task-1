html
  font-size: 18px

body
  background-color: #aa;

section
  max-width: 900px;

// weatherWidget
.weather
  width: 100%
  display: flex
  flex-direction: row
  &__rigth
    width: 30%
    display: flex
    flex-direction: column 
    justify-content: flex-start
  &__city-name
    font-size: 1.2em
    text-align: center
  &__picture
    width: 50%
    margin: 0 auto;
    img
      margin: 0 auto
  &__left
    width: 70%
    display: flex
    flex-direction: column
    justify-content: space-around    
  &__table
    display: flex
  &__table-item    
    border: 1px solid black
  &__table-item-header
    border-bottom: 1px solid black
    padding: 5px
  &__table-item-body
    padding: 10px
    display: flex
    flex-direction: column
    align-items: center

// news
.news-item
  padding: 20px
  &__wrapper
    display: flex;
    flex-direction: column;
    color: #111
    text-decoration: none
  &__head
    display: flex
    flex-direction: row
    justify-content: space-between
  &__image
    max-width: 30%
    float: left
    clear both
    img
      width: 100%
  &__desription
    max-width 70%
    margin-left: 10px